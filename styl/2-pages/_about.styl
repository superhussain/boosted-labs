#about
  section#hero
    // background-image: linear-gradient(rgba($black,0.5), rgba($black,0.5)), url("../img/bg2.jpg")
    background-image: linear-gradient(rgba($white,0.7), rgba($white,0.7)), url("../img/hero-bg.png")
    // background-color $white
    // min-height: 100vh
    min-height: 680px
    .wrapper
      max-width 800px
      #logo
        #logo--rocket
          transition: transform 200ms ease-in
          transform: translate(0,0)
        rect
          transition: 200ms ease-in-out
        &:hover
          #logo--rocket
            transform: translate(60px, -60px)
          rect
            fill: $orange
      p
        font-size: 1.5em
        font-family: "Roboto"
        font-weight: 200
        letter-spacing: 2px
        color: $black
        text-align: center
       
  section#intro
    background-color $orange
    color: $white
    min-height 560px
    @media (max-width 800px)
      min-height 0
    .wrapper
      p
        text-align jusify
        font-size 1.25em
        
  section#mission
    .wrapper
      p
        text-align center
        padding-bottom 2em
      .facilities
        margin-top 1em
        width 500px
        margin 0 auto
        background-color rgba($teal, 0.3)
        padding 1em 3em
        box-shadow 0 50px 50px -40px rgba($black, 0.1)
        ul, li
          text-align left
          font-weight 300
          line-height 1.5

section#corp-partnerships
    background-image: linear-gradient(rgba($black, 0.7), rgba($black, 0.7)), url("../img/corporate-bg.jpg")
    // background-color $teal
    color: $white
    min-height 680px
    @media (max-width 1000px)
      min-height 1200px
    @media (max-width 800px)
      min-height 0
    .wrapper
      max-width 720px
      h2
        padding-bottom 1em
      p
        font-size 1.35em
              
  section#partners
    background-color $white
    color $black
    min-height 400px
    .wrapper
      max-width 720px
      p
        text-align center
        font-size 1.25em
        line-height 1.45
        font-weight 500
        padding-bottom 2em
        display none
      .partner-logos
        width 100%
        opacity: 0.4